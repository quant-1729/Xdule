<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/blueuse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imgbutton31"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/blueuse"
            android:src="@drawable/baseline_arrow_back_24"></ImageButton>

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="Info"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"></TextView>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:text="Creators"
                android:textColor="@color/black"
                android:textFontWeight="@integer/material_motion_duration_medium_2"
                android:textSize="30sp"
                android:id="@+id/infotext1"

                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/infotext1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="6dp"
                android:layout_marginEnd="0dp"

                android:layout_marginBottom="0dp"
                android:padding="10dp"
                app:cardBackgroundColor="@color/aboutcard"
                app:cardCornerRadius="30dp">


                <TextView
                    android:layout_width="181dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginHorizontal="6dp"

                    android:text="@string/About"
                    android:textColor="@color/material_dynamic_neutral_variant100"

                    android:textSize="20sp"></TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="195dp"

                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    app:cardBackgroundColor="@color/aboutcard"
                    app:cardCornerRadius="4dp">

                    <ImageView
                        android:layout_width="193dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@drawable/shaktiman"
                        />


                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>